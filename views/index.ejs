<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background-color: #1f2937; /* Dark background */
      }
    </style>
  </head>
  <body>
    <div
      class="main w-full min-h-screen flex flex-col items-center justify-center bg-zinc-900 p-4"
    >
      <div class="form bg-zinc-800 p-6 rounded-lg shadow-lg w-full max-w-md">
        <form class="flex flex-col " action="/create" method="post">
          <input
            type="text"
            placeholder="Enter your text"
            class="mb-4 p-2 rounded bg-zinc-700 text-white"
            name="title"
          />
          <textarea
            placeholder="Enter your task details"
            class="mb-4 p-2 rounded bg-zinc-700 text-white resize-none"
            name="details"
          ></textarea>
          <button
            type="submit"
            class="bg-blue-600 text-white p-2 rounded hover:bg-blue-500 transition"
          >
            Create Task
          </button>
        </form>
      </div>
      <div class="tasks mt-6 w-full max-w-md">
        <% if (files && files.length > 0) { %>
          <% files.forEach((val) => { %>
            <div class="bg-zinc-800 p-4 rounded-lg mb-2">
              <h1 class="text-white">Some random Task</h1>
              <a href="<%= val.link %>" class="text-blue-400 hover:underline">Read more</a>
            </div>
          <% }); %>
        <% } else { %>
          <h3 class="text-white">No task available</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
